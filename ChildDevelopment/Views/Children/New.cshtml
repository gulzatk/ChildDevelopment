@{
  Layout = "_Layout";
}

<div class="container">
<h2>Add a new child</h2>
<form action = "/children" method = "post">

    <label for = "name">Name:</label>
    <input type = "text" name = "name"><br><br>

<label for="gender">Gender:</label>
  <select id="gender" name="gender">
    <option value=false>boy</option>
    <option value=true>girl</option>
</select><br><br>

<label for = "weight">Weight(in ounces):</label>
<input type = "num" name = "weight"><br><br>

<label for = "height">Height(in inches):</label>
<input type = "num" name = "height"><br><br>

<label for = "birth_date">birth_date:</label>
<input type = "date" name = "birth_date"><br><br>


<label for="breastfeeding">Was the child breastfed?:</label>
  <select id="breastfeeding" name="breastfeeding">
    <option value=true>Yes</option>
    <option value=false>No</option>
</select><br><br>

    <label for = "hold_head">hold_head:</label>
    <input type = "date" name = "hold_head"><br><br>

    <label for = "roll_over">roll_over:</label>
    <input type = "date" name = "roll_over"><br><br>

    <label for = "first_teeth">first_teeth:</label>
    <input type = "date" name = "first_teeth"><br><br>

    <label for = "sit">sit:</label>
    <input type = "date" name = "sit"><br><br>

    <label for = "crawl">crawl:</label>
    <input type = "date" name = "crawl"><br><br>

    <label for = "walk">walk:</label>
    <input type = "date" name = "walk"><br><br>

    <label for = "first_words">first_words:</label>
    <input type = "date" name = "first_words"><br><br>

    <label for = "self_feeding">self_feeding:</label>
    <input type = "date" name = "self_feeding"><br><br>

    <label for = "make_believe">make_believe:</label>
    <input type = "date" name = "make_believe"><br><br>

    <label for = "two_word_sentence">two_word_sentence:</label>
    <input type = "date" name = "two_word_sentence"><br><br>

    <label for = "potty_trained">potty_trained:</label>
    <input type = "date" name = "potty_trained"><br><br>

    <label for = "dressed_self">dressed_self:</label>
    <input type = "date" name = "dressed_self"><br><br>

    <label for = "tell_story">tell_story:</label>
    <input type = "date" name = "tell_story"><br><br>

    <label for = "read_write">read_write:</label>
    <input type = "date" name = "read_write"><br><br>


    <button class="btn btn-sm btn-primary" type = "submit">Add your child</button>
</form>

<h4><a href="/">Back home</a></h4>
</div>
